{% extends 'AntWebBundle::layout.html.twig' %}

{% block content %}

    <div class="row">

        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}

        <h1> {{ 'order.new'|trans({}, 'AntWebBundle') }}</h1>
        <div class="col-md-6">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="form-group">
                {{ form_label(form.name, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.name,  {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="alert alert-danger">
                    {{ form_errors(form.name) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.surname, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.surname,  {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="alert alert-danger">

                    {{ form_errors(form.surname) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.phone, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.phone,  {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="alert alert-danger">
                    {{ form_errors(form.phone) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.email, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.email,  {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="alert alert-danger">
                    {{ form_errors(form.email) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.captcha, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.captcha,  {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="alert alert-danger">
                    {{ form_errors(form.captcha) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.submit, 'Отправить заявку') }}
                <div class="col-sm-offset-1 col-sm-10">
                    {{ form_widget(form.submit,  {'attr': {'class': 'btn btn-default'}}) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <ul class="record_actions">
    </ul>
{% endblock %}
